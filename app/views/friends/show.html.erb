

<div class="bg-light p-*">
  <br>
  <h1>
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>

  <p class="lead">
    <%= @friend.email %>  |
    <%= @friend.phone %>  |
    <%= @friend.twitter %>
  </p>

  <br>

  <%= link_to "Edit", edit_friend_path(@friend), class:'btn btn-secondary btn-sm' %>
  <%= link_to "Back to friends", friends_path, class:'btn btn-dark btn-sm' %>

  <br><br>

  <%= button_to 'Delete', @friend, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger btn-sm" %>

  <br><br>

</div>




